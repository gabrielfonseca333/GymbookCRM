@* Clientes Index *@

@model List<Usuario>

@{
    ViewData["Title"] = "Clientes";
}

<!-- Content wrapper -->
<div class="content-wrapper">
    <!-- Content -->
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4">Lista de Clientes</h4>

        <!-- Cards Resumen de Clientes -->
        <div class="row g-4 mb-4">
            <div class="col-sm-6 col-xl-3">
                <div class="card">
                    <div class="card-body d-flex align-items-start justify-content-between">
                        <div class="content-left">
                            <span class="text-heading">Clientes Totales</span>
                            <h4 class="mb-0">@Model.Count</h4>
                            <small class="text-muted">Usuarios Registrados</small>
                        </div>
                        <div class="avatar">
                            <span class="avatar-initial rounded bg-label-primary">
                                <i class="ri-user-line icon-lg"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>

          @*
          TENGO QUE AÑADIR ESTE ESTADO EN LA BASE DE DATOS
          
          <!-- Activos -->
            <div class="col-sm-6 col-xl-3">
                <div class="card">
                    <div class="card-body d-flex align-items-start justify-content-between">
                        <div class="content-left">
                            <span class="text-heading">Usuarios Activos</span>
                            <h4 class="mb-0">@Model.Count(u => u.Estado == "Activo")</h4>
                            <small class="text-muted">Última semana</small>
                        </div>
                        <div class="avatar">
                            <span class="avatar-initial rounded bg-label-success">
                                <i class="ri-user-check-line icon-lg"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pendientes -->
            <div class="col-sm-6 col-xl-3">
                <div class="card">
                    <div class="card-body d-flex align-items-start justify-content-between">
                        <div class="content-left">
                            <span class="text-heading">Usuarios Pendientes</span>
                            <h4 class="mb-0">@Model.Count(u => u.Estado == "Pendiente")</h4>
                            <small class="text-muted">Revisión pendiente</small>
                        </div>
                        <div class="avatar">
                            <span class="avatar-initial rounded bg-label-warning">
                                <i class="ri-time-line icon-lg"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div> *@

        <!-- Filtros de búsqueda -->
        <div class="card mb-4">
            <h5 class="card-header">Filtros de Búsqueda</h5>
            <div class="card-body">
                <form method="get" action="@Url.Action("Index", "Clientes")">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <input type="text" name="nombre" class="form-control" placeholder="Nombre">
                        </div>
                        <div class="col-md-4">
                            <input type="email" name="email" class="form-control" placeholder="Correo Electrónico">
                        </div>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-primary">Buscar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Lista de Usuarios en Tabla -->
        <div class="card">
            <div class="card-header border-bottom">
                <h5 class="card-title mb-0">Lista de Clientes</h5>
            </div>
            <div class="table-responsive text-nowrap">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Usuario</th>
                            <th>Email</th>
                            @* <th>Teléfono</th> *@
                            @* <th>Estado</th> *@
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cliente in Model)
                        {
                            <tr>
                                <td>
                                    <img src="~/assets/images/profile.png" alt="Avatar" class="rounded-circle" width="40" height="40">
                                        <div>@cliente.Nombre</div>
                                </td>
                                
                                <td>@cliente.Correo</td>
                                @* <td>@usuario.Telefono</td> *@
                            @*     <td>
                                    <span class="badge bg-label-@(usuario.Estado == "Activo" ? "success" : "secondary")">
                                        @usuario.Estado
                                    </span>
                                </td> *@
                                <td>
                                        <a href="@Url.Action("Detalles", "Clientes", new { id = cliente.IdUsuario })" class="btn btn-icon"><i class="ri-eye-line"></i></a>
                                        <button class="btn btn-icon"><i class="ri-more-2-fill"></i></button>

                                        @*
                                        Esto tiene que ser un POP UP de cuando le des al icono de More (de los 3 puntos)
                                        
                                        <a href="@Url.Action("Editar", "Clientes", new { id = usuario.IdUsuario })" class="btn btn-icon">Editar</a>
                                        <a href="@Url.Action("Eliminar", "Clientes", new { id = usuario.IdUsuario })" class="btn btn-icon">Eliminar</a> *@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
