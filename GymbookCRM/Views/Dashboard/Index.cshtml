@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">Dashboard</h4>

    <!-- Fila principal de tarjetas -->
    <div class="row">
        <!-- Tarjeta 1 -->
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Clientes Registrados</h5>
                    <p class="card-text display-4">150</p>
                    <p class="card-text">Número total de clientes</p>
                </div>
            </div>
        </div>

        <!-- Tarjeta 2 -->
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Pedidos Activos</h5>
                    <p class="card-text display-4">25</p>
                    <p class="card-text">Pedidos en proceso</p>
                </div>
            </div>
        </div>

        <!-- Tarjeta 3 -->
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Ingresos Totales</h5>
                    <p class="card-text display-4">$12,300</p>
                    <p class="card-text">Este mes</p>
                </div>
            </div>
        </div>

        <!-- Tarjeta 4 -->
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h5 class="card-title">Alertas</h5>
                    <p class="card-text display-4">3</p>
                    <p class="card-text">Pendientes de atención</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Gráficos o tablas -->
    <div class="row">
        <!-- Gráfico o tabla izquierda -->
        <div class="col-lg-8 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Rendimiento Semanal</h5>
                </div>
                <div class="card-body">
                    <!-- Aquí puedes insertar un gráfico de ApexCharts o Chart.js -->
                    <div id="chart-weekly-performance"></div>
                </div>
            </div>
        </div>

        <!-- Lista o notificaciones a la derecha -->
        <div class="col-lg-4 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Notificaciones</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group">
                        <li class="list-group-item">Nuevo cliente registrado</li>
                        <li class="list-group-item">Pedido #1234 completado</li>
                        <li class="list-group-item">Pago recibido de $500</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>


</div>
