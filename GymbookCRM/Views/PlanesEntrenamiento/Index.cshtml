@model List<PlanEntrenamiento>

<!-- Contenedor principal -->
<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4">Planes de Entrenamiento</h4>

        <!-- Card de Planes de Entrenamiento -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Lista de Planes</h5>
                <button class="btn btn-primary" data-bs-toggle="offcanvas" data-bs-target="#offcanvasCreatePlan">
                    <i class="ri-add-line"></i> Crear Plan
                </button>
            </div>

            <!-- Tabla de planes -->
            <div class="table-responsive text-nowrap">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id Plan</th>
                            <th>Id Entrenamiento</th>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @if (Model != null && Model.Any())
                        {
                            foreach (var plan in Model)
                            {
                                <tr>
                                    <td>@plan.IdPlanEntrenamiento</td>
                                    <td>@plan.IdEntrenamiento</td>
                                    <td>@plan.Nombre</td>
                                    <td>@plan.Descripcion</td>
                                    <td>
                                        <button class="btn btn-sm btn-warning"><i class="ri-edit-line"></i></button>
                                        <button class="btn btn-sm btn-danger"><i class="ri-delete-bin-line"></i></button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center">No hay planes de entrenamiento.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
